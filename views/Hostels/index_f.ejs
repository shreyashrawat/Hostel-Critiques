<% include ../partials/header %>
 <div class="container">
     <header class="jumbotron">
         <div class="container">
             <h1>Hostel Critiques!</h1>
             <p>Get an insight of all the hostel blocks available for you</p>
         </div>
     </header>
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% hostels.forEach(function(hostel){ %>
            <div class="col-md-4 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= hostel.image %>">
                   <div class="caption">
                       <h4><%= hostel.name %></h4>
                   </div>
                   <p>
                       <a href="/hostels/<%=hostel._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
     
  
</div>

<% include ../partials/footer %>
